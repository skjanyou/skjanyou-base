<VBox fx:id="stageRoot" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@BlackDecorator.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.skjanyou.javafx.inter.impl.JavaFxBlackDecorator">
    <children>
        <HBox fx:id="banner" alignment="CENTER_RIGHT" minHeight="45" style="-fx-background-color: black;">
            <children>
            	<ImageView fx:id="iconImage" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                       <Image url="@icon/liulian.png" />
               </image>
               		<HBox.margin>
                  		<Insets left="15.0" />
               		</HBox.margin>
               	</ImageView>
            	<Label fx:id="title" text="这个地方是标题" textFill="#ffffffcc">
	               <HBox.margin>
	                  <Insets left="10.0" />
	               </HBox.margin>
	               <font>
	                  <Font name="Microsoft YaHei Bold" size="14.0" />
	               </font>
	            </Label>
            	<Pane HBox.hgrow="ALWAYS" />
                <ColorPicker fx:id="colorPicker" onAction="#changeColor" visible="false" />
                <ImageView fitHeight="15.0" fitWidth="15.0" onMouseReleased="#color" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@icon/color.png" />
                   </image>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </HBox.margin>
                </ImageView>
                <ImageView fitHeight="15.0" fitWidth="15.0" onMouseReleased="#min" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@icon/minimize.png" />
                   </image>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
                </ImageView>
            <VBox fx:id="close_box1" alignment="CENTER" layoutX="332.0" layoutY="10.0" prefHeight="45.0" prefWidth="45.0">
               <children>
                  <ImageView fx:id="maximize" fitHeight="15.0" fitWidth="15.0" onMouseReleased="#max" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <image>
                        <Image url="@icon/maximize.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="restore" fitHeight="1.0" fitWidth="1.0" onMouseReleased="#max" pickOnBounds="true" preserveRatio="true" styleClass="hidden">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <image>
                        <Image url="@icon/restore.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox fx:id="close_box" alignment="CENTER" prefHeight="45.0" prefWidth="45.0">
               <children>
                      <ImageView fx:id="close" fitHeight="15.0" fitWidth="15.0" onMouseReleased="#close" pickOnBounds="true" preserveRatio="true">
                         <image>
                             <Image url="@icon/close.png" />
                         </image>
                          <cursor>
                              <Cursor fx:constant="HAND" />
                          </cursor>
                      </ImageView>
               </children>
            </VBox>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
    </children>
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
   </opaqueInsets>
</VBox>
